<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapps">

    <application
        android:allowBackup="true"
        android:icon="@drawable/orange_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/round_shape_gray"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChatActivity"></activity>
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".EditPasswordActivity" />
        <activity android:name=".EditUsernameActivity" />
        <activity android:name=".ManageAccountActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>
        <activity android:name=".AddRatingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RecipeDetailActivity" />
        </activity>
        <activity android:name=".RatingReviewActivity" />
        <activity android:name=".InsertSteps" />
        <activity android:name=".InsertIngredient" />
        <activity
            android:name=".RecipeDetailActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>
        <activity android:name=".InsertRecipe" />
        <activity
            android:name=".DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/WithoutActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserLoginPage"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>