<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wm_report_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout14"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView76"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="314dp"
            android:text="Report"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonUserReport"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="#fff"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:shadowColor="@color/white"
        android:text="Total Monthly User Registration Report"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout14" />

    <Button
        android:id="@+id/buttonRecipeSummary"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:shadowColor="@color/white"
        android:text="Total Recipe Summary Report"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/buttonUserReport"
        app:layout_constraintTop_toBottomOf="@+id/buttonUserReport" />

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="55dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonUserReport"
        app:layout_constraintStart_toEndOf="@+id/buttonUserReport"
        app:layout_constraintTop_toTopOf="@+id/buttonUserReport"
        app:srcCompat="@drawable/gray_arrow_right" />

    <ImageView
        android:id="@+id/imageViewRecipeSummary"
        android:layout_width="55dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonRecipeSummary"
        app:layout_constraintStart_toEndOf="@+id/buttonRecipeSummary"
        app:layout_constraintTop_toTopOf="@+id/buttonRecipeSummary"
        app:srcCompat="@drawable/gray_arrow_right" />


</androidx.constraintlayout.widget.ConstraintLayout>